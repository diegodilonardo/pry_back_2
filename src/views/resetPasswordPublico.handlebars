<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
  <h1 style="background-color: #b3b3b3" class="p-3 text-center w-100">RESETEAR
    PASSWORD DE USUARIO</h1>
  <form
    class="m-3 d-flex flex-column justify-content-evenly flex-wrap align-items-center"
    style="width: 380px;"
  >
    <input
      class="m-2 p-2 text-center w-100"
      type="text"
      name="correousuario"
      id="correousuario"
      value={{email}}
      disabled
    />
    <input
      class="m-2 p-2 text-center w-100"
      type="password"
      name="new_password"
      id="new_password"
      placeholder="Ingrese Nuevo Password"
    />
    <input
      class="m-2 p-2 text-center w-100"
      type="password"
      name="verify_password"
      id="verify_password"
      placeholder="Verificar Nuevo Password"
    />
    <input
      class="m-2 p-2 text-center btn btn-dark w-100"
      type="button"
      id="btnresetear"
      value="Resetear Password"
    />
  </form>
</main>
<script src="/scripts/resetPasswordPublico.js"></script>