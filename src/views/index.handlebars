<h1 class="bg-success-subtle p-2 text-center text-success w-100">Productos</h1>
<section class="d-flex flex-wrap justify-content-evenly">
  {{#each productos}}
    <div class="card m-1    " style="width: 18rem;">
      <img src={{this.imagen}} class="card-img-top object-fit-cover" alt= {{this._id}}"..." style="height: 12 rem;">
      <div class="card-body d-flex flex-column justify-content-center">
        <h5 class="card-title">Producto: {{this.nombre}}</h5>
        <p class="card-text">Tipo: {{this.categoria}}</p>
        <p class="card-text">Color: {{this.color}}</p>
        <p class="card-text">$ {{this.precio}}</p>
        <a href="/detalle/{{this._id}}" class="btn btn-success">Mas informacion del producto</a>
      </div>
    </div>
  {{/each}}
</section>