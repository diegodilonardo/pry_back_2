<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
  <h1 style="background-color: #b3b3b3" class="p-3 text-center w-100">ACTUALIZAR DATOS DE USUARIO</h1>
  <form
    class="m-3 d-flex flex-column justify-content-evenly flex-wrap align-items-center"
    style="width: 380px;"
  >
    <input
      class="m-2 p-2 text-center w-100"
      type="text"
      name="nombre"
      id="nombre"
      placeholder="NICKNAME"
    />
    <input
      class="m-2 p-2 text-center w-100"
      type="text"
      name="avatar"
      id="avatar"
      placeholder="AVATAR URL"
    />
    <input
      class="m-2 p-2 text-center w-100"
      type="text"
      name="ciudad"
      id="ciudad"
      placeholder="CIUDAD"
    />
    <input
      class="m-2 p-2 text-center w-100"
      type="date"
      name="fecha_nacimiento"
      id="fecha_nacimiento"
    />
    <input
      class="m-2 p-2 text-center btn btn-dark w-100"
      type="button"
      id="btnactualizar"
      value="Modificar Datos"
    />
  </form>
</main>
<script src="/scripts/updateUsuario.js"></script>