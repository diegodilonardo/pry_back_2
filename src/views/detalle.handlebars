<h1 class="bg-success-subtle p-2 text-center text-success w-100">Detalle de Producto</h1>
<section class="d-flex flex-wrap justify-content-evenly">
 
    <div class="card m-1" style="width: 18rem;">
      <img src={{producto.imagen}} class="card-img-top object-fit-cover" alt= {{producto._id}}"..." style="height: 12 rem;">
      <div class="card-body d-flex flex-column justify-content-center">
        <h5 class="card-title">Producto: {{producto.nombre}}</h5>
        <p class="card-text">Tipo: {{producto.categoria}}</p>
        <p class="card-text">Color: {{producto.color}}</p>
        <p class="card-text">$ {{producto.precio}}</p>
        <button class="btn btn-success">Agregar a Carrito</button>
      </div>
    </div>
 
</section>